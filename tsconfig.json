{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": false,
    "useUnknownInCatchVariables": false,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "noEmit": true,
    "moduleDetection": "force",
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["../../core/src"],
      "@elizaos/core/*": ["../../core/src/*"]
    },
    "types": ["bun-types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json", "*.json", "scripts/inspec.ts"],
  "exclude": ["dist", "node_modules", "src/**/cypress/**/*"]
}
